{
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "framework": "vite",
  "buildCommand": "vite build",
  "outputDirectory": "client/dist",
  "crons": [
    {
      "path": "/api/sync",
      "schedule": "0 3 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
